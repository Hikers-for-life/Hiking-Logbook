{
  "name": "hiking-logbook-root",
  "private": true,
  "scripts": {
    "prepare": "husky"
  },

  "lint-staged": {
    "frontend/**/*.{js,jsx,ts,tsx}": [
      "npm run lint --prefix frontend",
      "npm test --prefix frontend -- --findRelatedTests"
    ],
    "backend/**/*.js": [
      "npm run lint --prefix backend",
      "npm test --prefix backend -- --findRelatedTests"
    ]
  },

  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5"
  }
}
