{
  "name": "hiking-logbook-root",
  "private": true,
  "scripts": {
    "_prepare": "husky install",
    "start": "react-scripts start"
  },
  "lint-staged": {
    "frontend/**/*.{js,jsx,ts,tsx}": [
      "npm run lint --prefix frontend",
      "npm test --prefix frontend -- --watchAll=false --findRelatedTests"
    ],
    "backend/**/*.js": [
      "npm run lint --prefix backend",
      "npm test --prefix backend -- --findRelatedTests --passWithNoTests"
    ]
  },


  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "autoprefixer": "^10.4.21",
    "eslint": "^8.57.1",
    "eslint-plugin-react": "^7.37.5",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.12",
    "typescript-eslint": "^8.39.1"
  },
  "dependencies": {
    "react-scripts": "^5.0.1"
  }
}
