{
  "name": "hiking-logbook-backend",
  "version": "1.0.0",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "dev:pm2": "pm2 start ecosystem.config.js --env development",
    "prod:pm2": "pm2 start ecosystem.config.js --env production",
    "pm2:stop": "pm2 stop hiking-logbook-backend",
    "pm2:restart": "pm2 restart hiking-logbook-backend",
    "pm2:logs": "pm2 logs hiking-logbook-backend",
    "pm2:monit": "pm2 monit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write src/",
    "format:check": "prettier --check src/",
    "build": "echo 'No build step required for Firebase Functions'",
    "serve": "firebase emulators:start --only functions",
    "shell": "firebase functions:shell",
    "deploy": "firebase deploy --only functions",
    "add-test-hike": "node scripts/add-test-hike.js"
  },
  "jest": {
    "testEnvironment": "node",

    "roots": ["<rootDir>/src"],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/tests/**/*.js",

      "!src/**/index.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": ["text", "lcov", "html", "json-summary"],
    "coverageThreshold": {
      "global": {
        "branches": 0,
        "functions": 0,
        "lines": 0,
        "statements": 0
      }
    }
  },
  "keywords": [
    "hiking",
    "logbook",
    "planning",
    "api",
    "firebase",
    "express"
  ],
  "author": "Hiking Logbook Team",
  "license": "MIT",
  "description": "Backend API for Hiking Logbook application",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.21.2",
    "express-rate-limit": "^8.1.0",
    "firebase-admin": "^12.0.0",
    "firebase-functions": "^6.4.0",
    "helmet": "^7.2.0",
    "morgan": "^1.10.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "eslint": "^9.32.0",
    "jest": "^30.0.5",
    "nodemon": "^3.1.10",
    "pm2": "^5.4.3",
    "prettier": "^3.6.2",
    "supertest": "^7.1.4"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}